<!DOCTYPE html>
<html>
	<h1>This is test application for understanding Node.js<h1>
	<body>
	<p>Satynam Ticket Booking</p>
	<% cinemas.forEach(function(cinema){ %>
			<p>
				<h4>
				<a	href="/cinemas/<%= cinema._id %>/info"><%= cinema.name %></a> 
				</h4>
				<p>Location: <%= cinema.location %></p>
				<img src = <%= cinema.image %> > 
			</p>
	<% }) %>

	<button type="button">
		<a href='/cinemas/new'>Add new cinema</a>
	</button>
	</body>
</html>
